@model Chushka.Web.ViewModels.Product.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name..." />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price..." />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Description..."></textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        <div class="form-check form-check-inline">
            <input asp-for="Type" type="radio" name="Type" value="Food" class="form-check-input" />
            <label asp-for="Type" class="form-check-label">Food</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" type="radio" name="Type" value="Domestic" class="form-check-input" />
            <label asp-for="Type" class="form-check-label">Domestic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" type="radio" name="Type" value="Health" class="form-check-input" />
            <label asp-for="Type" class="form-check-label">Health</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" type="radio" name="Type" value="Cosmetic" class="form-check-input" />
            <label asp-for="Type" class="form-check-label">Cosmetic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" type="radio" name="Type" value="Other" class="form-check-input" />
            <label asp-for="Type" class="form-check-label">Other</label>
        </div>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Create</button>
    </div>
</form>
