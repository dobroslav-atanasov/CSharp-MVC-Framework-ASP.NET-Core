@using Microsoft.AspNetCore.Identity;
@using Eventures.Models

@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <div class="container jumbotron mt-3 bg-info">
            <h1 class="text-center">Greetings, Administrator - @User.Identity.Name!</h1>
            <hr class="hr-2 bg-dark" />
            <h3 class="text-center">Enjoy your work.</h3>
        </div>
    }
    else
    {
        <div class="container jumbotron mt-3 bg-info">
            <h1 class="text-center">Welcome, @User.Identity.Name!</h1>
            <hr class="hr-2 bg-dark" />
            <h3 class="text-center">Eventures wishes you an exciting experience.</h3>
        </div>
    }
}
else
{
    <div class="container jumbotron mt-3 bg-info">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="hr-2 bg-dark" />
        <div>
            <h3><a asp-controller="Accounts" asp-action="Login" class="text-white">Login</a> to start "eventing".</h3>
        </div>
        <div>
            <h3><a asp-controller="Accounts" asp-action="Register" class="text-white">Register</a> if you don't have an account.</h3>
        </div>
    </div>
}