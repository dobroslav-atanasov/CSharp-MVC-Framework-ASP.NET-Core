@model IEnumerable<Eventures.Web.ViewModels.Orders.MyOrderViewModel>

@{
    ViewData["Title"] = "MyEvents";
    int index = 1;
}

<h1 class="text-center">My Events</h1>
<hr class="hr-2 bg-info" />
<table class="table w-75 mx-auto table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-3">Event</th>
            <th class="col-md-2">Start</th>
            <th class="col-md-2">End</th>
            <th class="col-md-4">Tickets</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in @Model)
        {
            <tr class="row">
                <th class="col-md-1">@index</th>
                <td class="col-md-3">@order.EventName</td>
                <td class="col-md-2">@order.Start</td>
                <td class="col-md-2">@order.End</td>
                <td class="col-md-2">@order.Tickets</td>
            </tr>

            index++;
        }
    </tbody>
</table>
<hr class="hr-2 bg-info" />

